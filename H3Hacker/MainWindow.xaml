<Window x:Class="H3Hacker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H3Hacker.Utility"
        mc:Ignorable="d"
        Title="H3Hacker" Height="800" Width="1200">
    <Window.Resources>
        <local:HeroViewModelToBooleanConverter x:Key="HeroViewModelToBooleanConverter" />
    </Window.Resources>
    <Grid x:Name="MainWindowPanel" Height="800" Width="1200">
        <StackPanel Orientation="Vertical" Width="1200">
            <StackPanel Orientation="Horizontal" Width="1200">
                <TextBlock FontSize="30" Margin ="5,5,0,0" Text="玩家颜色"/>
                <ComboBox FontSize="24" 
                                 VerticalAlignment="Top"
                                 Width="70"
                                 Margin="5,5,0,0"
                                 SelectedIndex="{Binding PlayerIndex}"
                                 SelectionChanged= "PlayerIndexChanged">
                    <ComboBoxItem>红</ComboBoxItem>
                    <ComboBoxItem>蓝</ComboBoxItem>
                    <ComboBoxItem>褐</ComboBoxItem>
                    <ComboBoxItem>绿</ComboBoxItem>
                    <ComboBoxItem>橙</ComboBoxItem>
                    <ComboBoxItem>紫</ComboBoxItem>
                    <ComboBoxItem>青</ComboBoxItem>
                    <ComboBoxItem>粉</ComboBoxItem>
                </ComboBox>
                <Button FontSize="25.5" Width ="80" Margin="5,5,0,0" VerticalAlignment="Top" Click="Load_OnClick">
                    读取
                </Button>
                <Button FontSize="25.5" Width ="80" Margin="5,5,0,0" VerticalAlignment="Top" Click="Resource_OnClick" IsEnabled="{Binding GameLoaded}">
                    资源
                </Button>
                <Button FontSize="25.5" Width ="100" Margin="5,5,0,0" VerticalAlignment="Top" Click="Commander_OnClick" IsEnabled="{Binding SelectedHero, Converter={StaticResource HeroViewModelToBooleanConverter}}">
                    指挥官
                </Button>
                <Button FontSize="25.5" Width ="100" Margin="5,5,0,0" VerticalAlignment="Top" Click="Creature_OnClick" IsEnabled="{Binding SelectedHero, Converter={StaticResource HeroViewModelToBooleanConverter}}">
                    比蒙
                </Button>
                <Button FontSize="25.5" Width ="100" Margin="5,5,0,0" VerticalAlignment="Top" Click="Save_OnClick">
                    保存
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="1200" Margin="5,5,0,0">
                <ListBox ItemsSource="{Binding Heroes}"
                           SelectedItem="{Binding SelectedHero, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           SelectionMode="Single"
                           Width="200"
                           FontSize="24">
                </ListBox>
                <StackPanel DataContext="{Binding SelectedHero}">
                    <ListBox ItemsSource="{Binding BasicSkills}"
                           SelectedItem="{Binding SelectedHero, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           SelectionMode="Single"
                           Width="200"
                           FontSize="24">
                    </ListBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
